<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gambarMakanan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_margin="3dp"/>

        <TextView
            android:id="@+id/namaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gambarMakanan"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:text="ini nama makanan"/>

        <TextView
            android:id="@+id/hargaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gambarMakanan"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="ini harga makanan"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:layout_below="@id/namaMakanan"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>